<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="3.0"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_weight="2.0"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="15dp"
            android:textColor="#f39"
            android:gravity="left"
            android:text="Cà phê đen sài gòn"
            android:layout_weight="1.0"
            android:id="@+id/text_view_item_name_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"


            android:textColor="#f39"
            android:gravity="left"
            android:text="10.000"
            android:layout_weight="1.0"
            android:id="@+id/text_view_item_price_bill"
            android:layout_width="wrap_content"
            android:layout_height="18dp" />

    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_weight="1.0"
        android:orientation="horizontal"

        android:layout_width="wrap_content"
        android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:id="@+id/textview_item_view_bill_tru"
                android:textSize="25dp"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textview_item_view_bill_size"
                android:gravity="right"
                android:textSize="15dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textview_item_view_bill_cong"
                android:text="+"
                android:textSize="25dp"
                android:gravity="right"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageview_bill_delete"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:src="@android:drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


</LinearLayout>

</LinearLayout>